<div class="row-fluid">
    <div class="span12">
        <h4>Xbox Controller Status</h4>
        <div class="row-fluid">
            <div class="span6">
                <span data-bind="text: controllerStatus"></span>
            </div>
            <div class="span6">
                <button class="btn" data-bind="click: toggleTestMode, css: { 'btn-primary': isTestMode }">
                    Test Modus
                </button>
            </div>
        </div>

        <!-- Werte-Anzeige -->
        <div data-bind="visible: isTestMode" style="margin-top: 20px">
            <h5>Controller Werte:</h5>
            <table class="table table-striped table-condensed">
                <tbody>
                    <tr>
                        <td>X-Achse:</td>
                        <td><span data-bind="text: currentX"></span></td>
                    </tr>
                    <tr>
                        <td>Y-Achse:</td>
                        <td><span data-bind="text: currentY"></span></td>
                    </tr>
                    <tr>
                        <td>Z-Achse:</td>
                        <td><span data-bind="text: currentZ"></span></td>
                    </tr>
                    <tr>
                        <td>Extruder:</td>
                        <td><span data-bind="text: currentE"></span></td>
                    </tr>
                </tbody>
            </table>

            <!-- Kalibrierung -->
            <h5>Achsen-Kalibrierung:</h5>
            <div class="control-group">
                <label class="control-label">X/Y Skalierung:</label>
                <div class="controls">
                    <input type="range" min="10" max="300" data-bind="value: xyScaleFactor">
                    <span data-bind="text: xyScaleFactor"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Z Skalierung:</label>
                <div class="controls">
                    <input type="range" min="10" max="300" data-bind="value: zScaleFactor">
                    <span data-bind="text: zScaleFactor"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">E Skalierung:</label>
                <div class="controls">
                    <input type="range" min="10" max="300" data-bind="value: eScaleFactor">
                    <span data-bind="text: eScaleFactor"></span>
                </div>
            </div>
        </div>
    </div>
</div>
